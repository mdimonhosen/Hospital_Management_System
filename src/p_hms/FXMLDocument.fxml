<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p_hms.FXMLDocumentController">
    <children>
        <Label fx:id="label" layoutX="126" layoutY="120" minHeight="16" minWidth="69" />
        
        <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="703.0" prefWidth="1079.0">
            <children>

                <!-- Top-Right Window Control Buttons -->
                <HBox layoutX="964.0" layoutY="10.0" spacing="5.0">
                    <children>
                        <Button fx:id="minimizeButton" onAction="#handleMinimize" prefWidth="30" text="─" />
                        <Button fx:id="maximizeButton" onAction="#handleMaximize" prefWidth="30" text="❐" />
                        <Button fx:id="closeButton" onAction="#handleClose" prefWidth="30" style="-fx-background-color: red; -fx-text-fill: white;" text="✕" />
                    </children>
                </HBox>

                <!-- Hospital Title -->
                <Label layoutX="390.0" layoutY="35.0" prefHeight="43.0" prefWidth="235.0" text="General Hospital" textFill="#f81515">
                    <font>
                        <Font name="System Bold" size="29.0" />
                    </font>
                </Label>

                <!-- Buttons -->
                <Button fx:id="button1" layoutX="166.0" layoutY="185.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="124.0" prefWidth="305.0" text="Receptionist Panal">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="button2" layoutX="593.0" layoutY="185.0" mnemonicParsing="false" onAction="#ap" prefHeight="124.0" prefWidth="305.0" text="Admin Panel">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="button3" layoutX="166.0" layoutY="397.0" mnemonicParsing="false" onAction="#mt" prefHeight="124.0" prefWidth="305.0" text="Medical Tests">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="button4" layoutX="593.0" layoutY="397.0" mnemonicParsing="false" onAction="#md" prefHeight="124.0" prefWidth="305.0" text="Medicines">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

            </children>
        </AnchorPane>
    </children>
</AnchorPane>
